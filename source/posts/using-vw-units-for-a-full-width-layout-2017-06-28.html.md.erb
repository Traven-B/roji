<script>
 // Code to  prevent widows in gallery item headers when they wrap
document.addEventListener('DOMContentLoaded', function() {
  // Select all h3 elements within gallery items
  document.querySelectorAll('.gallery-item h3').forEach(function(heading) {
    // Split the heading text into an array of words
    let words = heading.innerHTML.split(' ');
    // Check if there are more than one word
    if (words.length > 1) {
      // Combine the last two words with a non-breaking space
      words[words.length - 2] += '&nbsp;' + words.pop(); // Add non-breaking space
      // Join the words back into a single string and update the heading
      heading.innerHTML = words.join(' ');
    }
  });
});
</script>
